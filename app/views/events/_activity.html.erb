<% male_leader_result = activity.leader_result %>
<% female_leader_result = activity.leader_result(male: false) %>
<tr>
  <td><%= @total_activities - activity_counter %></td>
  <td><%= link_to l(activity.date, format: :short), activity %></td>
  <td><%= activity.results.size %></td>
  <td><%= @volunteers_count.fetch(activity, 0) %></td>
  <td class="hidden-on-phone"><%= "#{male_leader_result.athlete.name} (#{human_result_time(male_leader_result.total_time)})" if male_leader_result&.athlete.present? %></td>
  <td class="hidden-on-phone"><%= "#{female_leader_result.athlete.name} (#{human_result_time(female_leader_result.total_time)})" if female_leader_result&.athlete.present? %></td>
</tr>
