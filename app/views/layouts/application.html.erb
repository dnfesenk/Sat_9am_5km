            clickmap:true,
            trackLinks:true,
            accurateTrackBounce:true,
            webvisor:true
      });
    </script>
    <!-- /Yandex.Metrika counter -->
  </head>
  <body class="m-0 d-flex flex-column">
    <%= render 'navbars/top' %>
    <div class="container">
      <%= yield %>
    </div>
    <div class="spacer"></div>
    <%= render 'navbars/bottom' %>
  </body>
</html>
