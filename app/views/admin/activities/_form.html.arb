# frozen_string_literal: true

active_admin_form_for [:admin, resource] do |f|
  f.semantic_errors
  f.inputs 'Выберите мероприятие' do
    input :event_id, as: :select, label: 'Мероприятие', collection: Event.order(:code_name).pluck(:code_name, :id)
  end
  f.inputs 'Сведения о забеге' do
    input :description, label: 'Описание'
    input :published, label: 'Опубликовать результаты забега'
  end
  f.inputs 'Загрузите файлы' do
    input :timer, as: :file, label: 'Файл с секундомера'
    input :scanner1, as: :file, label: 'Файл со сканера 1'
    input :scanner2, as: :file, label: 'Файл со сканера 2'
    input :scanner3, as: :file, label: 'Файл со сканера 3'
    input :scanner4, as: :file, label: 'Файл со сканера 4'
    input :scanner5, as: :file, label: 'Файл со сканера 5'
  end

  actions
end
